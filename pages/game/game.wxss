page{background: #fdf1c8;}
.container{position: fixed;left: 0;right: 0;top: 0;bottom: 0;}
.userinfo{background:#ffffff;width: 90rpx;height: 90rpx;border-radius: 50%;position: absolute;top: 30rpx;left: 10rpx;z-index: 99;padding: 5rpx;}
.userinfo image{width: 90rpx;height: 90rpx;border-radius: 50%;display: block;}

.saohua-layer.hid{left: 130rpx;top: 45rpx;position: absolute;opacity: 0;}

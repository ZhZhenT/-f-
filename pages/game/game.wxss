.currenttime{border-radius: 35rpx;background: rgba(0, 0, 0, 0.3);position: absolute;width: 70rpx;height: 70rpx;line-height: 70rpx;right: -50rpx;top: 50rpx;text-align: center;color: #ffffff;font-size: 28rpx;}

.saohua-layer{ box-sizing: border-box;opacity: 1;background: rgba(0, 0, 0, 0.3);font-size: 28rpx;color: #ffffff;height: 70rpx;line-height: 70rpx;transition:opacity 3s 1s;border-radius: 10rpx;}
.count-down{position: absolute;width: 250rpx;height: 250rpx;color: #ffffff;font-size: 170rpx;text-align: center;line-height: 250rpx;background: rgba(0, 0, 0, 0.6);border-radius: 15rpx;left: 50%;transform: translateX(-50%);top: 300rpx;opacity: 0;transition:opacity 0.5s;}
.show{opacity: 1;}
.time{width: 70rpx;height: 70rpx;background: rgba(0, 0, 0, 0.3);color: #ffffff;text-align: center;line-height: 70rpx;font-size:28rpx;border-radius: 50%;top: 50rpx;right: 30rpx;position: absolute;}

.games-begin-btn{bottom: 30rpx;position: absolute;left: 50%;transform: translateX(-50%);}

.after-begin-wrap{position: absolute;left: 0;right: 0;bottom: 0;transform: translateY(100%);transition:1s;}
.after-begin-wrap.move{transform: translateY(0%);}
.after-begin-wrap .img-view{display: flex;justify-content: center;}
.after-begin-wrap .menu{display: flex;font-size: 24rpx;color: #333333;background: #ffffff;}
.after-begin-wrap .menu .item{text-align: center;display: flex;justify-content: center;padding: 20rpx 0;align-items: center;}
.after-begin-wrap .menu .item .red{color: #f25e5c;font-size: 36rpx;margin-left: 10rpx;}

.rule-layer{position: fixed;left: 0;right: 0;top: 0;bottom: 0;z-index: 99;background: rgba(0, 0, 0, 0.5); }
.rule-layer .txt-wrap{position: absolute;font-size: 24rpx;color: #ffffff;left: 115rpx;right: 115rpx;top:370rpx;}
.rule-layer .txt-wrap .txt{margin-top: 10rpx; white-space: pre-wrap;text-align: justify;}
.rule-layer .txt-wrap .txt.tit{margin-bottom: 10rpx;color: #000;font-size: 30rpx;}

.ranking-layer{position: fixed;left: 0;right: 0;top: 0;bottom: 0;z-index: 99;background: rgba(0, 0, 0, 0.5); }
.ranking-layer .userinfo{width: 135rpx;height: 135rpx;background: #ff665e;position: absolute;top: 260rpx;left:50%;transform: translateX(-50%);border-radius: 50%;}
.ranking-layer .userinfo{display: block;width: 130rpx;height: 130rpx;}
.ranking-layer .my-zj{position: absolute;top: 380rpx;left:50%;transform: translateX(-50%);z-index:1000}
.ranking-layer .my-zj .txt{text-align: center;transform: translateY(-63rpx);color: #fed952;font-size: 36rpx;}
.ranking-layer .text-wrap{color: #fdf1c8;position: absolute;top: 660rpx;left:50%;transform: translateX(-50%);}
.ranking-layer .text-wrap .txt1{display: flex;align-items: baseline;justify-content: center}
.ranking-layer .text-wrap .txt1 .big{font-size: 100rpx;}
.ranking-layer .text-wrap .txt2{margin-top: 30rpx;}
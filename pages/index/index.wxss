/**index.wxss**/

.container{height: 100%;padding-top: 50rpx;display: flex;flex-direction: column;align-items: center;justify-content: space-between;box-sizing: border-box;}
.userinfo {display: flex;flex-direction: column;align-items: center;background: #ffffff;border-radius: 50%;}
.userinfo-avatar {width: 128rpx;height: 128rpx;margin: 5rpx;border-radius: 50%;z-index: 10;position: relative;}
.userinfo-nickname {color: #aaa;}
.usermotto {margin-top: 100rpx;}
.user-input{box-sizing: border-box;width: 692rpx;padding: 130rpx 67rpx 110rpx;background: #ffffff;font-size: 32rpx;margin-top: -70rpx;z-index: 0;border-radius: 5rpx;position: relative;}
label{width: 100%;display: flex;justify-content: space-between;}
label .label-text{width: 220rpx;text-align: right;}
label .select{line-height: 85rpx;}
label input{width: 280rpx;border-bottom: 1rpx solid #d9d9d9;margin-bottom: 60rpx;}
.picker-box{width: 280rpx;border: 1rpx solid #d9d9d9;height: 85rpx;line-height: 85rpx;padding-left: 20rpx;border-radius: 3rpx;box-sizing: border-box;position: relative;}
.select-icon{position:absolute;width: 23rpx;height: 13rpx;right: 20rpx;top: 50%;transform: translateY(-50%)}
.service-money{text-align: center;font-size: 24rpx;color: #999999;margin-top: 70rpx;}
.submit-btn{text-align: center;position:relative;margin-top: 35rpx;}
.submit-btn-icon{width: 560rpx;height: 84rpx;}
.submit-text{position: absolute;top: 0;line-height: 84rpx;color: #ffffff;font-size: 32rpx;text-align: center;left: 0;right: 0;}
.bottom-menu{position: fixed;bottom: 0;display:flex;font-size:24rpx;justify-content: space-around;left: 0;right: 0;
background: #ffffff;color: #333333}
.bottom-menu-item{text-align: center;padding: 15rpx 0;width: 33.3333%;}
.bottom-menu-icon{width: 41rpx;height: 41rpx;}
.bottom-menu-item-center{border-left: 1rpx solid #d9d9d9;border-right: 1px solid #d9d9d9;}

.tishi{color: #ffffff;font-size: 26rpx;text-align:center;background: #FF6559;padding:  5rpx 0;margin-bottom: 30rpx;opacity: 0;position: absolute;left: 67rpx;right: 67rpx;top: 80rpx;}

.tishi.show{animation: najiuniu 4s}
@keyframes najiuniu {0%{opacity: 0}50%{opacity: 1}100%{opacity: 0}}


